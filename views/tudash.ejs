<% include partials/header1 %>


    <div class="jumbotron p-5 mt-5">
      <h1 class = "text-center display-2"> Hi <%=info.F_Name%></h1>
      <p class="lead text-center display-4">Welcome to Tutor Connect</p>
      <hr class="my-4">
      <p class = "text-center alert alert-info">Tutor Connect will help you find the best coachings and students near you. You can reset your default preferences to see
      new home tutors and coachings near you. Best of luck !
      </p>
      </div>
      
      <div class="row">
        <div class="col-3 bg-light">
          <div class="nav flex-column nav-pills" id="v-pills-tab" role="tablist" aria-orientation="vertical">
            <a class="nav-link active" id="v-pills-profile-tab" data-toggle="pill" href="#v-pills-profile" role="tab" aria-controls="v-pills-profile" aria-selected="true">Profile</a>
            <a class="nav-link" id="v-pills-preferences-tab" data-toggle="pill" href="#v-pills-preferences" role="tab" aria-controls="v-pills-preferences" aria-selected="false">Preferences</a>
            <a class="nav-link" id="v-pills-reset-tab" data-toggle="pill" href="#v-pills-reset" role="tab" aria-controls="v-pills-reset" aria-selected="false">Reset Preferences</a>
            <a class="nav-link" id="v-pills-delete-tab" data-toggle="pill" href="#v-pills-delete" role="tab" aria-controls="v-pills-delete" aria-selected="false">Delete Account</a>
          </div>
        </div>
        <div class="col-9">
          <div class="tab-content" id="v-pills-tabContent">
            <div class="tab-pane fade show active" id="v-pills-profile" role="tabpanel" aria-labelledby="v-pills-profile-tab">
              
              <table class="table table-borderless table-striped table-hover">
                <thead class = "thead-dark">
                  <tr>
                    <th scope="col">Basic Details</th>
                    <th scope="col"></th>
                  </tr>
                </thead>
                <tbody>
                  <tr>
                    <th scope="row">Name</th>
                    <td><%=info.F_Name%> <%=info.L_Name%></td>
                  </tr>
                  <tr>
                    <th scope="row">Email</th>
                    <td><%= info.Email %></td>
                  </tr>
                  <tr>
                    <th scope="row">City</th>
                    <td><%= info.City %></td>
                  </tr>
                  <tr>
                    <th scope="row">Contact</th>
                    <td><%= info.Contact %></td>
                  </tr>
                  <tr>
                    <th scope="row">Qualification</th>
                    <td><%= info.Qualification %></td>
                  </tr>
                  <tr>
                    <th scope="row">Experience</th>
                    <td><%= info.Experience %></td>
                  </tr>
                </tbody>
            </table>
            </div>
            <div class="tab-pane fade" id="v-pills-preferences" role="tabpanel" aria-labelledby="v-pills-preferences-tab">
              
              <table class="table table-borderless table-striped table-hover">
                  <thead class = "thead-dark">
                    <tr>
                      <th scope="col"># Course</th>
                      <th scope="col">Class</th>
                      <th scope="col">Subject</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% for(var i=0;i<courses.length;i++){ %>
                      <tr>
                        <th> Course <%=i+1%>: </th>
                        <td> <%=courses[i].Class%> </td>
                        <td> <%=courses[i].Subject%> </td>
                      </tr>
                    <%}%>
                  </tbody>
              </table>
            </div>

 
            <div class="tab-pane fade" id="v-pills-reset" role="tabpanel" aria-labelledby="v-pills-reset-tab">
              <div class="alert alert-warning" role="alert">
                Are you sure you want to change your preferences? 
              </div>
              <a href="/tutor/<%=info.T_ID%>/resetprefs" class="btn btn-outline-warning">Reset</a>
            </div>
            <div class="tab-pane fade" id="v-pills-delete" role="tabpanel" aria-labelledby="v-pills-delete-tab">
              <div class="alert alert-danger" role="alert">
                Clicking the button below will remove your account permanently. Do you really want to continue ?
              </div>
              <a href="/tutor/<%=info.T_ID%>/delete" class="btn btn-outline-danger">Delete</a>
            </div>
          </div>
        </div>
      </div>
    

    <style type="text/css">
      label
      {
        margin-top: 5px;
      }
      .infobox
      {
        display:inline;
      }
    </style>

<% include partials/footer1 %>
