<% include partials/header %>
<script type = "text/javascript">
document.querySelector("title").innerHTML = 'Login';
</script>    
    <div class = "container" style = "margin-top: 25px;">
        <div class = "form mx-auto mt-5 mb-2 pt-3 px-5 pb-5" style = "width : 40%; border : 3px solid #007bff;">
                <h1  style = "text-align: center; text-transform: capitalize;" class = "text-info mb-4"><%= user.usertype %> Login</h1>
                <form action="/<%=user.usertype%>/login" method = "POST">
                  <div class="form-group">
                    <label for="exampleInputEmail1">Email address</label>
                    <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name = "email" placeholder="Enter email">
                    <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
                  </div>
                  <div class="form-group">
                    <label for="exampleInputPassword1">Password</label>
                    <input type="password" class="form-control" id="exampleInputPassword1" name = "password" placeholder="Password">
                  </div>
                  <p>Not a user?  <a href = "/<%=user.usertype%>/register">Register</a></p>
                  <button type="submit" class="btn btn-primary">Submit</button>
                </form>
        </div>
    </div>
    <p style = "text-align: center;"><strong><em>Trademark TutorConnect 2019</em></strong></p>
<% include partials/footer %>